<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Great Outdoor Journal</title>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <!-- Google Icon Fonts used by Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Materialize CSS Framework -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="stylesheets/style.css" />
  <!-- JavaScript for Materialize -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>

<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <a href="/bloggers" class="brand-logo left">
          <i class="material-icons left">nature</i>The Great Outdoor Journal
        </a>
        <ul class="right">
          <li>
            <% if (user) { %>
              <a href="/logout">
                <i class="material-icons left">logout</i>Log Out
              </a>
            <% } else { %>
              <a href="/auth/google">
                <i class="material-icons left">login</i>Login with Google
              </a>
            <% } %>       
          </li>
        </ul>
      </div>
    </nav>
  </div>
  
  <div class="container">
    <!-- Welcome Section -->
    <div class="welcome-section">
      <h2>
        <i class="material-icons medium" style="vertical-align: middle; margin-right: 10px;">explore</i>
        Your Outdoor Adventures
      </h2>
      <p>Welcome, <strong><%= user ? user.name : 'Explorer' %></strong>! Share your outdoor experiences and discover new adventures.</p>
    </div>

    <!-- Create New Journal Form -->
    <% if (user) { %>
      <div class="create-form">
        <h5 style="color: white; margin-bottom: 1.5rem;">
          <i class="material-icons left">add_circle</i>Share Your Adventure
        </h5>
        <form action="/bloggers" method="POST">
          <div class="input-field">
            <input type="text" name="name" placeholder="Adventure Title (e.g., Hiking Mount Wilson)" required>
          </div>
          <div class="input-field">
            <input type="text" name="text" placeholder="Tell us about your adventure..." required>
          </div>
          <button type="submit" class="btn btn-custom waves-effect waves-light">
            <i class="material-icons left">send</i>Share Adventure
          </button>
        </form>
      </div>
    <% } %>

    <!-- Journal Entries -->
    <div class="row">
      <div class="col s12">
        <% if (journals.length) { %> 
          <h5 style="color: var(--primary-color); margin-bottom: 1.5rem;">
            <i class="material-icons left">book</i>Recent Adventures
          </h5>
          <% journals.forEach(function(j) { %>
            <div class="card journal-card">
              <div class="card-content" style="position: relative;">
                <% if (user && j.user.equals(user._id)) { %>
                  <form action="/bloggers/<%=j._id%>?_method=DELETE" method="POST" style="display: inline;">
                    <button type='submit' class="btn-floating btn-small waves-effect waves-light delete-btn" onclick="return confirm('Are you sure you want to delete this adventure?')">
                      <i class="material-icons">delete</i>
                    </button>
                  </form>  
                <% } %>
                
                <a href="/bloggers/<%= j.id %>" class="journal-title">
                  <i class="material-icons tiny" style="vertical-align: middle;">location_on</i>
                  <%= j.name %>
                </a>
                <p class="journal-text"><%= j.text %></p>
                
                <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #eee;">
                  <small style="color: #666;">
                    <i class="material-icons tiny" style="vertical-align: middle;">person</i>
                    Shared by adventurer
                  </small>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-journals">
            <i class="material-icons large" style="color: #ccc; margin-bottom: 1rem;">explore_off</i>
            <h3>No Adventures Yet</h3>
            <p>Be the first to share an outdoor adventure!</p>
            <% if (!user) { %>
              <a href="/auth/google" class="btn btn-custom waves-effect waves-light" style="margin-top: 1rem;">
                <i class="material-icons left">login</i>Login to Share
              </a>
            <% } %>
          </div>
        <% } %> 
      </div>
    </div>
  </div>
</body>

</html>